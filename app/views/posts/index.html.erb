<h1>Post list</h1>
<%= render "users/user" %>
<% @user.posts.each do |post| %>
  <%= link_to [post.user, post] do %></h2>
    <div>
      <h3><%= post.title %></h3>
      <p><%= post.text %></p>
    </div>
    <% post.recently_commented.each do |comment| %>
      <p><%= comment.user.name %>: <%= comment.text %></p>
    <% end %>
  <% end %>
<% end %>
